{% from "components/header.html.jinja" import header %}
{% from "components/section.html.jinja" import section %}

{% extends "main.html.jinja" %}
{% block main %}
<div class="flex flex-col gap-5 bg-[#f3e8ff] w-full p-4">
  {{ header(context.header) }}

  <img class="h-1/3" src="assets/images/profile/{{ '' | random }}.png" />

  {% for section_name, section_data in context.items() %}
    {% if section_data %}
      {{ section(section_data) }}
    {% endif %}
  {% endfor %}
</div>
{% endblock  %}
